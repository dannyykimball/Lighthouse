<link rel="stylesheet" href="/public/styles/join_class.css">

<div class="container cornsilk">
    <div class="left">
        {{#if instructor}}
        <h1>Sorry, instructors cannot join classes as students!</h1>
        {{else}}
        <h1>Join a classroom!</h1>
        <form id="join-class-form" action="/class/join" method="POST">
            <div>
                <label for="class-code">Class Code</label>
                <input type="text" name="class-code" id="class-code">
            </div>
            <div>
                <label for="class-password">Class Password</label>
                <input type="password" name="class-password" id="class-password">
            </div>

            <button class="Join" type="submit">
                <span class="Join_Text2">Join</span>
            </button>
        </form>
        <div id="join-class-error" hidden>
            <ul id="join-class-error-list">
            </ul>
        </div>
        {{/if}}
    </div>

    <div class="graphic">
        <img src="../public/img/class.svg" alt="Avatar" style="height: 100%;">
    </div>
</div>

{{#if error}}
<h3>{{{error}}}</h3>
{{/if}}
<script src="/public/js/scripts/join_class.js"></script>